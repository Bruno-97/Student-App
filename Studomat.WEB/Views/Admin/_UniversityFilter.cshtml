@using Studomat.WEB.Models

@model UniversityFilterModel

<style>
    .button {
        background-color: white;
        color: black;
        border: 2px solid #8041f7;
        border-radius: 3px;
        padding: 4px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
    }

        .button:hover {
            background-color: #8041f7;
            color: white;
        }
</style>


<form action="@Url.Action("ListaFakulteta")" method="post" class="form-inline" id="forma">
    <div class="form-group">
        <input asp-for="UniversityName" class="form-control" type="text" placeholder="Pretraži po nazivu" />
    </div>
    <button type="button" class="button" onclick="performFilter()">Pretraga</button>
</form>