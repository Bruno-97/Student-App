
@{
    ViewData["Title"] = "Statistika";
}

    <head>
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

        <style>
            @@import url('https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css');

            @@media(min-width:768px) {
                body {
                    margin-top: 50px;
                }
            }

            @@media(max-width:768px) {
                #page-wrapper {
                    margin-top: 130px;
                    width: 100%;
                    padding: 0;
                    background-color: #fff;
                }
            }

            #wrapper {
                padding-left: 0;
            }

            #page-wrapper {
                width: 100%;
                padding: 0;
                background-color: #fff;
            }

            @@media(min-width:768px) {
                #wrapper {
                    padding-left: 225px;
                }

                #page-wrapper {
                    padding: 22px 10px;
                }
            }

            .top-nav {
                padding: 0 15px;
            }

                .top-nav > li {
                    display: inline-block;
                    float: left;
                }

                    .top-nav > li > a {
                        padding-top: 20px;
                        padding-bottom: 20px;
                        line-height: 20px;
                        color: #fff;
                    }

                        .top-nav > li > a:hover,
                        .top-nav > li > a:focus,
                        .top-nav > .open > a,
                        .top-nav > .open > a:hover,
                        .top-nav > .open > a:focus {
                            color: #fff;
                            background-color: #09364a;
                        }

                .top-nav > .open > .dropdown-menu {
                    float: left;
                    position: absolute;
                    margin-top: 0;
                    border-top-left-radius: 0;
                    border-top-right-radius: 0;
                    background-color: #fff;
                    -webkit-box-shadow: 0 6px 12px rgba(0,0,0,.175);
                    box-shadow: 0 6px 12px rgba(0,0,0,.175);
                }

                    .top-nav > .open > .dropdown-menu > li > a {
                        white-space: normal;
                    }


            @@media(min-width:768px) {
                .side-nav {
                    position: fixed;
                    top: 60px;
                    left: 225px;
                    width: 225px;
                    margin-left: -225px;
                    border: none;
                    border-radius: 0;
                    border-top: 1px rgba(0,0,0,.5) solid;
                    overflow-y: auto;
                    background-color: #222;
                    bottom: 0;
                    overflow-x: hidden;
                    padding-bottom: 40px;
                }

                    .side-nav > li > a {
                        width: 225px;
                        border-bottom: 1px rgba(0,0,0,.3) solid;
                    }

                    .side-nav li a:hover,
                    .side-nav li a:focus {
                        outline: none;
                        background-color: #09364a !important;
                    }
            }

            .side-nav > li > ul {
                padding: 0;
                border-bottom: 1px rgba(0,0,0,.3) solid;
            }

                .side-nav > li > ul > li > a {
                    display: block;
                    padding: 10px 15px 10px 38px;
                    text-decoration: none;
                    color: #fff;
                }

                    .side-nav > li > ul > li > a:hover {
                        color: #fff;
                    }

            .navbar .nav > li > a > .label {
                -webkit-border-radius: 50%;
                -moz-border-radius: 50%;
                border-radius: 50%;
                position: absolute;
                top: 14px;
                right: 6px;
                font-size: 10px;
                font-weight: normal;
                min-width: 15px;
                min-height: 15px;
                line-height: 1.0em;
                text-align: center;
                padding: 2px;
            }

            .navbar .nav > li > a:hover > .label {
                top: 10px;
            }

            .navbar-brand {
                padding-top: 20px;
            }
        </style>
    </head>

<div id="throbber" style="display:none; min-height:120px;"></div>
<div id="noty-holder"></div>
<div id="wrapper">
    <partial name="_navigacija" />
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row" id="main">
                <div class="col-sm-12 col-md-12 well" id="content" style="padding-top:10px;">
                    @*<h1 style="font-weight: bold;">STATISTIČKI PODACI</h1>*@
                    <canvas id="myChart" style="max-width: 1200px;"></canvas>
                    <br /><br /><br />
                    <div style="border-bottom:5px solid black;"></div>
                    <br /><br />
                    <canvas id="myChart1" style="max-width: 600px;"></canvas>
                </div>
                <script language="javascript" type="text/javascript">
                    var ctx = document.getElementById("myChart").getContext('2d');
                    ctx.canvas.width = 500;
                    ctx.canvas.height = 500;
                        var myChart = new Chart(ctx, {
                            type: 'bar', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
                            data: {
                                labels: ["Županije", "Mjesta", "Fakulteti", "Studenti", "Nastavnici", "Kolegiji"],
                                datasets: [{
                                    label: 'Broj redaka u bazi',
                                    data: [@ViewBag.brojZupanija, @ViewBag.brojMjesta, @ViewBag.brojFakulteta, @ViewBag.brojUsera, @ViewBag.brojNastavnika, @ViewBag.brojKolegija],
                                    backgroundColor: [
                                        //'rgba(0, 0, 0, 0.7)',
                                        'rgba(34, 34, 34, 0.7)',
                                        'rgba(72, 255, 255, 0.7)',
                                        'rgba(34, 34, 34, 0.7)',
                                        'rgba(72, 255, 255, 0.7)',
                                        'rgba(34, 34, 34, 0.7)',
                                        'rgba(72, 255, 255, 0.7)'
                                    ],
                                    borderWidth: 1,
                                    hoverBorderWidth: 3,
                                    hoverBorderColor: '#000',
                                    borderColor: '#777'
                                }]
                            },
                            options: {
                                title: {
                                    display: true,
                                    text: 'Osnovni podaci',
                                    fontSize: 25
                                },
                                scales: {
                                    yAxes: [{
                                        ticks: {
                                            beginAtZero: true
                                        }
                                    }]
                                }
                            }
                        });
                </script>
                <script language="javascript" type="text/javascript">
                    var ctx = document.getElementById("myChart1").getContext('2d');
                    ctx.canvas.width = 600;
                    ctx.canvas.height = 600;
                        var myChart1 = new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: ["Redovni", "Izvanredni"],
                                datasets: [{
                                    label: 'Broj redaka u bazi',
                                    data: [@ViewBag.brojRedovnih, @ViewBag.brojIzvanrednih],
                                    backgroundColor: [
                                        'rgba(0, 123, 255, 0.7)',
                                        'rgba(255, 193, 7, 0.7)'
                                    ],
                                    borderWidth: 1,
                                    hoverBorderWidth: 3,
                                    hoverBorderColor: '#000',
                                    borderColor: '#777'
                                }]
                            },
                            options: {
                                title: {
                                    display: true,
                                    text: 'REDOVNI / IZVANREDNI studenti',
                                    fontSize: 25
                                },
                                scales: {
                                    yAxes: [{
                                        ticks: {
                                            beginAtZero: true
                                        }
                                    }]
                                }
                            }
                        });
                </script>

            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
            $(".side-nav .collapse").on("hide.bs.collapse", function () {
                $(this).prev().find(".fa").eq(1).removeClass("fa-angle-right").addClass("fa-angle-down");
            });
            $('.side-nav .collapse').on("show.bs.collapse", function () {
                $(this).prev().find(".fa").eq(1).removeClass("fa-angle-down").addClass("fa-angle-right");
            });
        })

    </script>
}