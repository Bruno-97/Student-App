@page
@model LoginModel
@{
    ViewData["Title"] = "Prijava u Studomat";
}

    <head>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <style>
            body {
                height: 100%;
                margin: 0;
                /*background: rgb(2,0,36);*/
                background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(13, 13, 13,1) 0%, rgba(191, 191, 191,1) 96%);
                /*background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(149,199,20,1) 0%, rgba(0,212,255,1) 96%);*/
                color: black;
            }

            .form-container {
                margin-top: 50px;
                color: white;
                font-size: large;
                padding: 30px;
                border-radius: 5px;
                /*box-shadow: 0px 0px 20px 0px;*/
                /*background: white;*/
                background-color: rgba(0,0,0,0.5) !important;
            }

            .col-centered {
                float: none;
                margin: 0 auto;
            }

            #eposta {
                color: black;
                float: right;
                margin-top: -25px;
                padding-right: 10px;
                position: relative;
            }

            #togglePassword {
                color: black;
                float: right;
                margin-top: -25px;
                padding-right: 10px;
                position: relative;
                cursor: pointer;
            }

            .heading {
                border-bottom: 1px solid #fcab0e;
                padding-bottom: 39px;
                position: relative;
            }

                .heading span {
                    background: #9e6600 none repeat scroll 0 0;
                    bottom: -2px;
                    height: 3px;
                    left: 0;
                    position: absolute;
                    width: 75px;
                }

            .button {
                background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
                border: 2px solid #007bff;
                border-radius: 5px;
                color: #fff;
                font-size: 16px;
                font-style: normal;
                line-height: 35px;
                margin: 10px 0;
                padding: 0;
                text-transform: uppercase;
                width: 100%;
            }

                .button:hover {
                    background: #007bff none repeat scroll 0 0;
                    color: black;
                    transition: all 0.5s ease 0s;
                }

            #zsl {
                color: #9e6600;
            }

                #zsl:hover {
                    text-decoration: none;
                    color: white;
                }
        </style>
    </head>

@*<body style="background-image: url('@Url.Content("~/images/slika.jpg")'); background-position: center; background-repeat: no-repeat; background-size: cover;">*@
<body @*style="background: gray"*@>
    <section class="container-fluid">
        <section class="row">
            <div class="col-12 col-sm-5 col-md-5 col-lg-3 col-centered animated bounceInDown">
                <form method="post" class="form-container">
                    <h1 class="heading text-center"><strong>STUDOMAT</strong><span></span></h1>

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email">KORISNIČKA OZNAKA</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <i class="far fa-envelope" id="eposta"></i>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">LOZINKA</label>
                        <input id="password" asp-for="Input.Password" class="form-control" />
                        <i class="far fa-eye" id="togglePassword"></i>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="button" style="font-size:x-large">PRIJAVA</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword" id="zsl">Zaboravili ste lozinku?</a>
                        </p>
                        @*<p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>*@
                    </div>
                </form>
            </div>
        </section>
    </section>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');

        togglePassword.addEventListener('click', function (e) {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            this.classList.toggle('fa-eye-slash');
        });

    </script>
}
